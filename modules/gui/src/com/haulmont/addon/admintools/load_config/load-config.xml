<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption.loadConfigScreen"
        class="com.haulmont.addon.admintools.load_config.LoadConfig">
    <dialogMode height="auto"
                width="auto"/>
    <layout spacing="true" width="100%">
        <upload id="uploadField"
                dropZone="dropZone"
                showClearButton="true"
                showFileName="true"/>
        <vbox id="dropZone"
              height="150px"
              width="300px"
              spacing="true"
              align="MIDDLE_CENTER"
              stylename="dropzone-container">
            <label stylename="dropzone-description"
                   width="100%"
                   value="msg://dropZoneDescription"
                   align="MIDDLE_CENTER"/>
        </vbox>
        <hbox spacing="true">
            <button id="apply" invoke="apply" caption="mainMsg://actions.Apply"/>
            <button id="cancel" invoke="cancel" caption="mainMsg://actions.Cancel"/>
        </hbox>

    </layout>
</window>