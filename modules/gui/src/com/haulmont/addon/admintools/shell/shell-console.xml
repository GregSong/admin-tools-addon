<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://header"
        class="com.haulmont.addon.admintools.shell.ShellConsole"
        messagesPack="com.haulmont.addon.admintools.shell">
    <dialogMode height="auto"
                width="auto"/>
    <layout spacing="true">
        <vbox margin="true"
              spacing="true"
              width="800px">
            <hbox height="50px"
                  spacing="true"
                  width="100%">
                <button id="shellRun"
                        caption="Run"
                        invoke="shellRun"/>
            </hbox>
            <hbox spacing="true"
                  align="MIDDLE_LEFT">
                <label align="MIDDLE_LEFT"
                       value="msg://arguments"
                       width="100px"
                       />
                <textField id="args"
                           align="MIDDLE_LEFT"
                           width="665px"/>
            </hbox>
            <sourceCodeEditor id="shellText"
                              align="TOP_CENTER"
                              height="600px"
                              width="100%"/>
        </vbox>
    </layout>
</window>
