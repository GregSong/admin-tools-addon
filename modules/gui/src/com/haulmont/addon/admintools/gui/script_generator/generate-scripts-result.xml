<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption.generateScriptResultScreen"
        class="com.haulmont.addon.admintools.gui.script_generator.GenerateScriptsResult">
    <layout spacing="true">
        <vbox id="editors"
              expand="resultScriptGroup"
              spacing="true">
            <hbox spacing="true">
                <label align="MIDDLE_CENTER"
                       value="Script Type"/>
                <lookupField id="generateOptions"
                             nullOptionVisible="false"
                             textInputAllowed="false"/>
                <button id="execute"
                        align="BOTTOM_RIGHT"
                        caption="msg://generate"
                        invoke="execute"/>
                <button id="cancel"
                        align="BOTTOM_RIGHT"
                        caption="msg://cancel"
                        invoke="cancel"/>
            </hbox>
            <groupBox id="querySettings"
                      caption="msg://caption.query"
                      spacing="true"
                      visible="false">
                <hbox spacing="true"
                      expand="executeProgressBar"
                      width="100%">
                    <label align="MIDDLE_CENTER"
                           value="Entity Type"/>
                    <lookupField id="entitiesMetaClasses"
                                 nullOptionVisible="false"
                                 required="true"
                                 requiredMessage="msg://alert.setEntityType"
                                 width="300px"/>
                    <label align="MIDDLE_CENTER"
                           value="View"/>
                    <lookupField id="entityViews"
                                 nullOptionVisible="false"
                                 textInputAllowed="false"
                                 width="300px"/>
                    <label align="MIDDLE_CENTER"
                           value="msg://entityLimit"/>
                    <textField id="entityLimitField"
                               datatype="int"/>
                    <progressBar id="executeProgressBar"
                                 align="MIDDLE_CENTER"/>
                </hbox>
                <sourceCodeEditor id="query"
                                  height="300px"
                                  mode="SQL"
                                  required="true"
                                  requiredMessage="msg://alert.enterQuery"
                                  width="100%"/>
            </groupBox>
            <groupBox id="resultScriptGroup"
                      caption="msg://caption.result"
                      spacing="true">
                <hbox spacing="true">
                    <button id="downloadResult"
                            caption="msg://downloadResult"
                            invoke="downloadResult"/>
                    <button id="Clear"
                            caption="msg://clear"
                            invoke="clear"/>
                </hbox>
                <sourceCodeEditor id="resultScript"
                                  editable="false"
                                  height="300px"
                                  mode="SQL"
                                  width="100%"/>
            </groupBox>
        </vbox>
        <hbox id="windowActions"
              align="BOTTOM_RIGHT"
              spacing="true">
            <button id="windowClose"
                    align="BOTTOM_RIGHT"
                    caption="mainMsg://actions.Ok"
                    invoke="windowClose"/>
        </hbox>
    </layout>
</window>
